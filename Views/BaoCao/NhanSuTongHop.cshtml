@model List<BangLuong.ViewModels.BaoCaoNhanSuViewModel>

@{
    ViewData["Title"] = "Báo Cáo Nhân Sự Tổng Hợp";
    var danhSachPhongBan = ViewBag.DanhSachPhongBan as List<string> ?? new List<string>();
    var selectedPhongBan = ViewBag.PhongBan as string ?? "";
}

<!-- ================= FORM LỌC ================= -->
<form method="get" asp-action="NhanSuTongHop" class="form-inline mb-3">
    <div class="form-group mr-2">
        <label for="phongBan" class="mr-2"><i class="fas fa-building"></i> Phòng ban:</label>
        <select id="phongBan" name="phongBan" class="form-control" style="min-width: 200px;">
            <option value="">-- Tất cả --</option>
            @foreach (var pb in danhSachPhongBan)
            {
                <option value="@pb" selected="@(pb == selectedPhongBan ? "selected" : null)">@pb</option>
            }
        </select>
    </div>
    <button type="submit" class="btn btn-primary">
        <i class="fas fa-filter"></i> Lọc
    </button>
</form>

<!-- ================= NỘI DUNG BÁO CÁO ================= -->
<div class="container-fluid">
    <div class="card shadow mb-4">
        <div class="card-header py-3 d-flex justify-content-between align-items-center">
            <h4 class="m-0 font-weight-bold text-info">
                <i class="fas fa-users"></i> Báo Cáo Nhân Sự Tổng Hợp
            </h4>
            @if (Model?.Any() == true)
            {
                <button type="button" class="btn btn-success" onclick="exportExcel()">
                    <i class="fas fa-file-excel"></i> Xuất Excel
                </button>
            }
        </div>
        
        <div class="card-body">
            @if (Model?.Any() == true)
            {
                <!-- Tổng số nhân viên & ngày xuất -->
                <div class="alert alert-info mb-3">
                    <div class="row">
                        <div class="col-md-6">
                            <strong><i class="fas fa-info-circle"></i> Tổng số nhân viên:</strong> @Model.Count người
                            @if (!string.IsNullOrEmpty(selectedPhongBan))
                            {
                                <span class="badge badge-primary ml-2">@selectedPhongBan</span>
                            }
                        </div>
                        <div class="col-md-6 text-right">
                            <strong><i class="fas fa-calendar"></i> Ngày xuất:</strong> @DateTime.Now.ToString("dd/MM/yyyy HH:mm")
                        </div>
                    </div>
                </div>

                <!-- Thống kê nhanh theo phòng ban -->
                <div class="row mb-3">
                    @{
                        var thongKe = Model.GroupBy(x => x.PhongBan)
                                           .Select(g => new { PhongBan = g.Key ?? "Không xác định", SoLuong = g.Count() })
                                           .OrderByDescending(x => x.SoLuong);
                    }
                    @foreach (var item in thongKe)
                    {
                        <div class="col-md-3 col-sm-6 mb-2">
                            <div class="card border-left-primary shadow h-100 py-2">
                                <div class="card-body">
                                    <div class="row no-gutters align-items-center">
                                        <div class="col mr-2">
                                            <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                                @item.PhongBan
                                            </div>
                                            <div class="h5 mb-0 font-weight-bold text-gray-800">@item.SoLuong người</div>
                                        </div>
                                        <div class="col-auto">
                                            <i class="fas fa-users fa-2x text-gray-300"></i>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>

                <!-- Bảng dữ liệu -->
                <div class="table-responsive">
                    <table class="table table-bordered table-hover" id="dataTable">
                        <thead class="thead-light">
                            <tr>
                                <th>STT</th>
                                <th>Mã NV</th>
                                <th>Họ Tên</th>
                                <th>Giới Tính</th>
                                <th>Ngày Sinh</th>
                                <th>Phòng Ban</th>
                                <th>Chức Vụ</th>
                                <th>Ngày Vào Làm</th>
                                <th>Thâm Niên (Năm)</th>
                                <th>Email</th>
                                <th>SĐT</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                int stt = 1;
                                string currentPhongBan = "";
                            }
                            @foreach (var item in Model.OrderBy(x => x.PhongBan).ThenBy(x => x.HoTen))
                            {
                                @if (currentPhongBan != item.PhongBan && !string.IsNullOrEmpty(item.PhongBan))
                                {
                                    currentPhongBan = item.PhongBan;
                                    <tr class="table-info font-weight-bold">
                                        <td colspan="11"><i class="fas fa-building"></i> @currentPhongBan</td>
                                    </tr>
                                }
                                <tr>
                                    <td class="text-center">@stt</td>
                                    <td>@item.MaNV</td>
                                    <td>@item.HoTen</td>
                                    <td class="text-center">@item.GioiTinh</td>
                                    <td class="text-center">@item.NgaySinh?.ToString("dd/MM/yyyy")</td>
                                    <td>@item.PhongBan</td>
                                    <td>@item.ChucVu</td>
                                    <td class="text-center">@item.NgayVaoLam?.ToString("dd/MM/yyyy")</td>
                                    <td class="text-center">@item.ThamNienNam?.ToString("0.0")</td>
                                    <td>@item.Email</td>
                                    <td>@item.SoDienThoai</td>
                                </tr>
                                stt++;
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="alert alert-warning">
                    <i class="fas fa-exclamation-triangle"></i> Không có dữ liệu nhân viên
                    @if (!string.IsNullOrEmpty(selectedPhongBan))
                    {
                        <span>trong phòng ban <strong>@selectedPhongBan</strong></span>
                    }
                    .
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function exportExcel() {
            const form = document.createElement('form');
            form.method = 'POST';
            form.action = '@Url.Action("ExportNhanSu", "BaoCao")';

            const phongBan = document.getElementById('phongBan').value;

            const input = document.createElement('input');
            input.type = 'hidden';
            input.name = 'phongBan';
            input.value = phongBan;
            form.appendChild(input);

            // Thêm anti-forgery token
            const tokenInput = document.createElement('input');
            tokenInput.type = 'hidden';
            tokenInput.name = '__RequestVerificationToken';
            tokenInput.value = '@Html.AntiForgeryToken()'.match(/value="(.+?)"/)[1];
            form.appendChild(tokenInput);

            document.body.appendChild(form);
            form.submit();
            document.body.removeChild(form);
        }

        $(document).ready(function() {
            $('#dataTable').DataTable({
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.10.24/i18n/Vietnamese.json"
                },
                "pageLength": 25,
                "order": [[5, "asc"], [2, "asc"]], // Sắp xếp theo Phòng ban, sau đó Họ tên
                "columnDefs": [
                    { "orderable": false, "targets": 0 } // Không cho sắp xếp cột STT
                ]
            });
        });
    </script>
}

@section Styles {
    <style>
        .border-left-primary {
            border-left: 0.25rem solid #4e73df !important;
        }
        
        .table td {
            vertical-align: middle;
        }
        
        .card-body {
            padding: 1rem;
        }

        .table-info td {
            background-color: #d1ecf1 !important;
            font-weight: bold;
        }

        .form-inline .form-group {
            margin-bottom: 10px;
        }

        @@media (max-width: 768px) {
            .form-inline .form-group {
                display: block;
                width: 100%;
                margin-right: 0 !important;
            }

            .form-inline .form-control {
                width: 100%;
            }

            .form-inline button {
                width: 100%;
                margin-top: 10px;
            }
        }
    </style>
}