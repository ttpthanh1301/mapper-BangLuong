@model List<BangLuong.ViewModels.BaoCaoNhanSuViewModel>

@{
    ViewData["Title"] = "Báo Cáo Nhân Sự Tổng Hợp";
}

<div class="container-fluid">
    <div class="card shadow mb-4">
        <div class="card-header py-3 d-flex justify-content-between align-items-center">
            <h4 class="m-0 font-weight-bold text-info">
                <i class="fas fa-users"></i> Báo Cáo Nhân Sự Tổng Hợp
            </h4>
            @if (Model != null && Model.Any())
            {
                <button type="button" class="btn btn-success" onclick="exportExcel()">
                    <i class="fas fa-file-excel"></i> Xuất Excel
                </button>
            }
        </div>
        
        <div class="card-body">
            @if (Model != null && Model.Any())
            {
                <div class="alert alert-info mb-3">
                    <div class="row">
                        <div class="col-md-6">
                            <strong><i class="fas fa-info-circle"></i> Tổng số nhân viên:</strong> @Model.Count người
                        </div>
                        <div class="col-md-6 text-right">
                            <strong><i class="fas fa-calendar"></i> Ngày xuất:</strong> @DateTime.Now.ToString("dd/MM/yyyy HH:mm")
                        </div>
                    </div>
                </div>

                <!-- Thống kê nhanh -->
                <div class="row mb-3">
                    @{
                        var thongKe = Model.GroupBy(x => x.PhongBan).Select(g => new { PhongBan = g.Key, SoLuong = g.Count() });
                    }
                    @foreach (var item in thongKe)
                    {
                        <div class="col-md-3 mb-2">
                            <div class="card border-left-primary shadow h-100 py-2">
                                <div class="card-body">
                                    <div class="row no-gutters align-items-center">
                                        <div class="col mr-2">
                                            <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                                @item.PhongBan
                                            </div>
                                            <div class="h5 mb-0 font-weight-bold text-gray-800">@item.SoLuong người</div>
                                        </div>
                                        <div class="col-auto">
                                            <i class="fas fa-users fa-2x text-gray-300"></i>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>

                <!-- Bảng dữ liệu -->
                <div class="table-responsive">
                    <table class="table table-bordered table-hover" id="dataTable">
                        <thead class="thead-light">
                            <tr>
                                <th>STT</th>
                                <th>Mã NV</th>
                                <th>Họ Tên</th>
                                <th>Giới Tính</th>
                                <th>Ngày Sinh</th>
                                <th>Phòng Ban</th>
                                <th>Chức Vụ</th>
                                <th>Ngày Vào Làm</th>
                                <th>Thâm Niên (Năm)</th>
                                <th>Loại HĐ</th>
                                <th>Trạng Thái</th>
                                <th>Email</th>
                                <th>SĐT</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                int stt = 1;
                                string currentPhongBan = "";
                            }
                            @foreach (var item in Model.OrderBy(x => x.PhongBan).ThenBy(x => x.HoTen))
                            {
                                @if (currentPhongBan != item.PhongBan && !string.IsNullOrEmpty(item.PhongBan))
                                {
                                    currentPhongBan = item.PhongBan;
                                    <tr class="table-info font-weight-bold">
                                        <td colspan="13"><i class="fas fa-building"></i> @currentPhongBan</td>
                                    </tr>
                                }
                                <tr>
                                    <td class="text-center">@stt</td>
                                    <td>@item.MaNV</td>
                                    <td>@item.HoTen</td>
                                    <td class="text-center">@item.GioiTinh</td>
                                    <td class="text-center">@item.NgaySinh?.ToString("dd/MM/yyyy")</td>
                                    <td>@item.PhongBan</td>
                                    <td>@item.ChucVu</td>
                                    <td class="text-center">@item.NgayVaoLam?.ToString("dd/MM/yyyy")</td>
                                    <td class="text-center">@item.ThamNienNam?.ToString("0.0")</td>
                                    <td>@item.LoaiHopDong</td>
                                    <td>
                                        @if (item.TrangThaiHopDong == "Đang hiệu lực")
                                        {
                                            <span class="badge badge-success">@item.TrangThaiHopDong</span>
                                        }
                                        else
                                        {
                                            <span class="badge badge-secondary">@item.TrangThaiHopDong</span>
                                        }
                                    </td>
                                    <td>@item.Email</td>
                                    <td>@item.SoDienThoai</td>
                                </tr>
                                stt++;
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="alert alert-warning">
                    <i class="fas fa-exclamation-triangle"></i> Không có dữ liệu nhân viên.
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function exportExcel() {
            const form = document.createElement('form');
            form.method = 'POST';
            form.action = '@Url.Action("ExportNhanSu", "BaoCao")';
            
            document.body.appendChild(form);
            form.submit();
            document.body.removeChild(form);
        }

        $(document).ready(function() {
            $('#dataTable').DataTable({
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.10.24/i18n/Vietnamese.json"
                },
                "pageLength": 25,
                "order": [[5, "asc"], [2, "asc"]],
                "columnDefs": [
                    { "orderable": false, "targets": 0 }
                ]
            });
        });
    </script>
}

@section Styles {
    <style>
        .border-left-primary {
            border-left: 0.25rem solid #4e73df !important;
        }
        
        .table td {
            vertical-align: middle;
        }
        
        .card-body {
            padding: 1rem;
        }
    </style>
}