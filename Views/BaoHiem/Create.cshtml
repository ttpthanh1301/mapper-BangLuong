@model BangLuong.ViewModels.BaoHiemViewModels.BaoHiemRequest

@{
    ViewData["Title"] = "Tạo Hồ Sơ Bảo Hiểm";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-lg border-0 rounded-4">

                <div class="card-header bg-success text-white text-center rounded-top-4">
                    <h3 class="mb-0"><i class="fas fa-file-invoice"></i> @ViewData["Title"]</h3>
                </div>

                <div class="card-body p-4 p-md-5">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-3"></div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="MaNV" class="form-label fw-semibold">
                                    <i class="fas fa-user-tag text-primary"></i> Nhân viên <span class="text-danger">*</span>
                                </label>
                                <select asp-for="MaNV"
                                        class="form-control"
                                        asp-items="@(ViewData["MaNV"] as SelectList)">
                                    <option value="">-- Chọn nhân viên --</option>
                                </select>
                                <span asp-validation-for="MaNV" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="SoSoBHXH" class="form-label fw-semibold">
                                    <i class="fas fa-id-card-alt text-primary"></i> @Html.DisplayNameFor(m => m.SoSoBHXH) <span class="text-danger">*</span>
                                </label>
                                <input asp-for="SoSoBHXH" class="form-control" placeholder="Nhập số sổ BHXH..." />
                                <span asp-validation-for="SoSoBHXH" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="MaTheBHYT" class="form-label fw-semibold">
                                    <i class="fas fa-id-badge text-primary"></i> @Html.DisplayNameFor(m => m.MaTheBHYT)
                                </label>
                                <input asp-for="MaTheBHYT" class="form-control" placeholder="Nhập mã thẻ BHYT..." />
                                <span asp-validation-for="MaTheBHYT" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="NgayCapSo" class="form-label fw-semibold">
                                    <i class="far fa-calendar-alt text-primary"></i> @Html.DisplayNameFor(m => m.NgayCapSo)
                                </label>
                                <input asp-for="NgayCapSo" type="date" class="form-control" />
                                <span asp-validation-for="NgayCapSo" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="NoiDKKCB" class="form-label fw-semibold">
                                    <i class="fas fa-hospital text-primary"></i> @Html.DisplayNameFor(m => m.NoiDKKCB)
                                </label>
                                <input asp-for="NoiDKKCB" class="form-control" placeholder="Nhập nơi đăng ký KCB..." />
                                <span asp-validation-for="NoiDKKCB" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="NoiCapSo" class="form-label fw-semibold">
                                    <i class="fas fa-map-marker-alt text-primary"></i> @Html.DisplayNameFor(m => m.NoiCapSo)
                                </label>
                                <input asp-for="NoiCapSo" class="form-control" placeholder="Nhập nơi cấp sổ BHXH..." />
                                <span asp-validation-for="NoiCapSo" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="d-flex justify-content-between mt-4">
                            <a asp-action="Index" class="btn btn-outline-secondary btn-lg">
                                <i class="fa fa-arrow-left"></i> Quay lại
                            </a>
                            <button type="submit" class="btn btn-success btn-lg">
                                <i class="fa fa-save"></i> Lưu hồ sơ
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}