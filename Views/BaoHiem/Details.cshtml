@model BangLuong.ViewModels.BaoHiemViewModels.BaoHiemViewModel

@{
    ViewData["Title"] = "Chi Tiết Hồ Sơ Bảo Hiểm";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-header bg-info text-white text-center rounded-top-4">
                    <h3 class="mb-0"><i class="fas fa-info-circle"></i> @ViewData["Title"]</h3>
                </div>
                <div class="card-body p-4 p-md-5">
                    <dl class="row detail-list">
                        
                        <dt class="col-sm-4"><i class="fas fa-user-tag text-primary me-2"></i> Mã Nhân Viên</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.MaNV)</dd>

                        <dt class="col-sm-4"><i class="fas fa-user text-primary me-2"></i> Họ và Tên</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.TenNhanVien)</dd>
                        
                        <hr class="my-3" />

                        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.SoSoBHXH)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.SoSoBHXH)</dd>

                        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.MaTheBHYT)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.MaTheBHYT)</dd>

                        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.NoiDKKCB)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.NoiDKKCB)</dd>

                        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.NgayCapSo)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.NgayCapSo)</dd>

                        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.NoiCapSo)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.NoiCapSo)</dd>
                    </dl>
                </div>
                
                <div class="card-footer d-flex justify-content-start">
                    <a asp-action="Edit" asp-route-id="@Model?.MaBH" class="btn btn-warning me-2">
                        <i class="fa fa-edit"></i> Sửa
                    </a>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fa fa-arrow-left"></i> Quay lại
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>