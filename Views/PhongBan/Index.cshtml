@using BangLuong.ViewModels
@using static BangLuong.ViewModels.PhongBanViewModels
@model PaginatedList<PhongBanViewModel>

@{
    ViewData["Title"] = "Danh sách Phòng Ban";
    var prevDisabledClass = !Model.HasPreviousPage ? "disabled" : "";
    var nextDisabledClass = !Model.HasNextPage ? "disabled" : "";
}

<h1>Danh sách Phòng Ban</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>

<form asp-action="Index" method="get" class="mb-3">
    <div class="d-flex">
        <input class="form-control me-2" placeholder="Search..." 
               value="@ViewData["CurrentFilter"]" name="SearchString" autocomplete="off" />
        <button type="submit" class="btn btn-secondary">Search</button>
    </div>
</form>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Tên Phòng Ban</th>
            <th>Mô Tả</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.TenPB</td>
                <td>@item.MoTa</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.MaPB" class="btn btn-warning btn-sm" title="Sửa">
                        <i class="fa fa-edit"></i>
                        Edit
                    </a> 
                    <a asp-action="Details" asp-route-id="@item.MaPB" class="btn btn-info btn-sm text-white" title="Chi tiết">
                        <i class="fa fa-info-circle"></i>
                        Detail
                    </a> 
                    <a asp-action="Delete" asp-route-id="@item.MaPB" class="btn btn-danger btn-sm" title="Xóa">
                        <i class="fa fa-trash-alt"></i>
                        Delete
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="d-flex justify-content-between">
    <a asp-action="Index" 
       asp-route-pageNumber="@(Model.PageIndex - 1)" 
       asp-route-currentFilter="@ViewData["CurrentFilter"]" 
       class="btn btn-outline-primary @prevDisabledClass">
        Previous
    </a>

    <span>Page @Model.PageIndex of @Model.TotalPages</span>

    <a asp-action="Index" 
       asp-route-pageNumber="@(Model.PageIndex + 1)" 
       asp-route-currentFilter="@ViewData["CurrentFilter"]" 
       class="btn btn-outline-primary @nextDisabledClass">
        Next
    </a>
</div>
