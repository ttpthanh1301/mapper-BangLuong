@model BangLuong.ViewModels.HopDongViewModels.HopDongViewModel


@{
    ViewData["Title"] = "Chỉnh sửa hợp đồng";

}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-header bg-primary text-white text-center rounded-top-4">
                    <h3 class="mb-0"><i class="fa fa-file-contract"></i> @ViewData["Title"]</h3>
                </div>

                <div class="card-body p-4">
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        @* Trường ẩn MaHD là bắt buộc để POST form Edit *@
                        <input type="hidden" asp-for="MaHD" />

                        <div class="row g-3">
                            <!-- Thông tin cơ bản -->
                            <div class="col-12">
                                <h5 class="text-primary border-bottom pb-2"><i class="fa fa-info-circle"></i> Thông tin
                                    cơ bản</h5>
                            </div>

                            <div class="col-md-4">
                                <label asp-for="SoHopDong" class="form-label fw-semibold"></label>
                                <input asp-for="SoHopDong" class="form-control" readonly
                                    placeholder="Nhập số hợp đồng..." />
                                <span asp-validation-for="SoHopDong" class="text-danger small"></span>
                            </div>
                            <div class="col-md-4">
                                <label asp-for="LoaiHD" class="form-label fw-semibold"></label>
                                <input asp-for="LoaiHD" class="form-control" />
                                <span asp-validation-for="LoaiHD" class="text-danger small"></span>
                            </div>

                            <div class="col-md-4">
                                <label asp-for="TrangThai" class="form-label fw-semibold"></label>
                                <input asp-for="TrangThai" class="form-control" />
                                <span asp-validation-for="TrangThai" class="text-danger small"></span>
                            </div>


                            <div class="col-md-4">
                                <label asp-for="NgayBatDau" class="form-label fw-semibold"></label>
                                <input asp-for="NgayBatDau" type="date" class="form-control"
                                    value="@(Model.NgayBatDau.ToString("yyyy-MM-dd"))" />
                                <span asp-validation-for="NgayBatDau" class="text-danger small"></span>
                            </div>

                            <div class="col-md-4">
                                <label asp-for="NgayKetThuc" class="form-label fw-semibold"></label>
                                <input asp-for="NgayKetThuc" type="date" class="form-control"
                                    value="@(Model.NgayKetThuc?.ToString("yyyy-MM-dd"))" />
                                <span asp-validation-for="NgayKetThuc" class="text-danger small"></span>
                            </div>

                            <div class="col-md-4">
                                <label asp-for="MaNV" class="form-label fw-semibold"></label>
                                <select asp-for="MaNV" class="form-select">
                                    <option value="">-- Chọn nhân viên --</option>
                                    @foreach (var item in ViewBag.MaNV)
                                    {
                                        <option value="@item.Value">@item.Text (@item.Value)</option>
                                    }
                                </select>
                                <span asp-validation-for="MaNV" class="text-danger small"></span>
                            </div>

                            <!-- Lương và phụ cấp -->
                            <div class="col-12 mt-4">
                                <h5 class="text-primary border-bottom pb-2"><i class="fa fa-money-bill-wave"></i> Lương
                                    và phụ cấp</h5>
                            </div>

                            <div class="col-md-4">
                                <label asp-for="LuongCoBan" class="form-label fw-semibold"></label>
                                <div class="input-group">
                                    <input asp-for="LuongCoBan" type="number" class="form-control"
                                        placeholder="Nhập lương cơ bản..." />
                                    <span class="input-group-text">VNĐ</span>
                                </div>
                                <span asp-validation-for="LuongCoBan" class="text-danger small"></span>
                            </div>

                            <div class="col-md-4">
                                <label asp-for="PhuCapAnTrua" class="form-label fw-semibold"></label>
                                <div class="input-group">
                                    <input asp-for="PhuCapAnTrua" type="number" class="form-control"
                                        placeholder="Phụ cấp ăn trưa..." />
                                    <span class="input-group-text">VNĐ</span>
                                </div>
                                <span asp-validation-for="PhuCapAnTrua" class="text-danger small"></span>
                            </div>

                            <div class="col-md-4">
                                <label asp-for="PhuCapXangXe" class="form-label fw-semibold"></label>
                                <div class="input-group">
                                    <input asp-for="PhuCapXangXe" type="number" class="form-control"
                                        placeholder="Phụ cấp xăng xe..." />
                                    <span class="input-group-text">VNĐ</span>
                                </div>
                                <span asp-validation-for="PhuCapXangXe" class="text-danger small"></span>
                            </div>

                            <div class="col-md-4">
                                <label asp-for="PhuCapDienThoai" class="form-label fw-semibold"></label>
                                <div class="input-group">
                                    <input asp-for="PhuCapDienThoai" type="number" class="form-control"
                                        placeholder="Phụ cấp điện thoại..." />
                                    <span class="input-group-text">VNĐ</span>
                                </div>
                                <span asp-validation-for="PhuCapDienThoai" class="text-danger small"></span>
                            </div>

                            <div class="col-md-4">
                                <label asp-for="PhuCapTrachNhiem" class="form-label fw-semibold"></label>
                                <div class="input-group">
                                    <input asp-for="PhuCapTrachNhiem" type="number" class="form-control"
                                        placeholder="Phụ cấp trách nhiệm..." />
                                    <span class="input-group-text">VNĐ</span>
                                </div>
                                <span asp-validation-for="PhuCapTrachNhiem" class="text-danger small"></span>
                            </div>

                            <div class="col-md-4">
                                <label asp-for="PhuCapKhac" class="form-label fw-semibold"></label>
                                <div class="input-group">
                                    <input asp-for="PhuCapKhac" type="number" class="form-control"
                                        placeholder="Phụ cấp khác..." />
                                    <span class="input-group-text">VNĐ</span>
                                </div>
                                <span asp-validation-for="PhuCapKhac" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="d-flex justify-content-between mt-4">
                            <a asp-action="Index" class="btn btn-outline-secondary px-4">
                                <i class="fa fa-arrow-left"></i> Quay lại
                            </a>
                            <button type="submit" class="btn btn-primary px-4">
                                <i class="fa fa-save"></i> Lưu
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}