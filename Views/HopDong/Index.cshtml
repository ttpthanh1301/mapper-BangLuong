@using static BangLuong.ViewModels.HopDongViewModels
@model PaginatedList<HopDongViewModel>

@{
    ViewData["Title"] = "Danh sách Hợp Đồng";
    bool isAdminOrManager = ViewBag.IsAdminOrManager ?? false;
    var prevDisabled = !Model.HasPreviousPage ? "disabled" : "";
    var nextDisabled = !Model.HasNextPage ? "disabled" : "";
}

<div class="container-fluid">
    <!-- Header -->
    <div class="row mb-4">
        <div class="col-12">
            <h1 class="text-center">
                <i class="fas fa-file-contract text-primary"></i>
                Danh sách Hợp Đồng
            </h1>
        </div>
    </div>

    <!-- Action Buttons -->
    <div class="row mb-3">
        <div class="col-12">
            @if (isAdminOrManager)
            {
                <a asp-action="Create" class="btn btn-success">
                    <i class="fas fa-plus"></i> Thêm mới
                </a>
            }
        </div>
    </div>

    <!-- Search -->
    <div class="row mb-3">
        <div class="col-md-6">
            <form asp-action="Index" method="get">
                <div class="input-group">
                    <input class="form-control" name="searchString" value="@ViewData["CurrentFilter"]" placeholder="Tìm theo số hợp đồng, mã NV..." autocomplete="off" />
                    <button class="btn btn-primary" type="submit">
                        <i class="fas fa-search"></i> Tìm kiếm
                    </button>
                    @if (!string.IsNullOrEmpty(ViewData["CurrentFilter"]?.ToString()))
                    {
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-times"></i> Xóa bộ lọc
                        </a>
                    }
                </div>
            </form>
        </div>
    </div>

    <!-- Table -->
    <div class="card">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0">
                <i class="fas fa-list"></i> Danh sách hợp đồng
                @if (!string.IsNullOrEmpty(ViewData["CurrentFilter"]?.ToString()))
                {
                    <small class="float-right"><i class="fas fa-filter"></i> Lọc: @ViewData["CurrentFilter"]</small>
                }
            </h5>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover table-striped mb-0">
                    <thead class="thead-light">
                        <tr>
                            <th>Số Hợp Đồng</th>
                            <th>Loại HĐ</th>
                            <th>Ngày Bắt Đầu</th>
                            <th>Ngày Kết Thúc</th>
                            <th>Lương Cơ Bản</th>
                            <th>Trạng Thái</th>
                            <th>Mã NV</th>
                            <th class="text-center">Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Any())
                        {
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td><strong>@item.SoHopDong</strong></td>
                                    <td>
                                        @if (item.LoaiHD == "Chính thức")
                                        {
                                            <span class="badge badge-success">@item.LoaiHD</span>
                                        }
                                        else if (item.LoaiHD == "Thử việc")
                                        {
                                            <span class="badge badge-warning">@item.LoaiHD</span>
                                        }
                                        else
                                        {
                                            <span class="badge badge-info">@item.LoaiHD</span>
                                        }
                                    </td>
                                    <td>@item.NgayBatDau.ToString("dd/MM/yyyy")</td>
                                    <td>@item.NgayKetThuc?.ToString("dd/MM/yyyy")</td>
                                    <td>@item.LuongCoBan.ToString("N0") VNĐ</td>
                                    <td>
                                        @if (item.TrangThai == "Đang hiệu lực")
                                        {
                                            <span class="badge badge-success">@item.TrangThai</span>
                                        }
                                        else if (item.TrangThai == "Hết hiệu lực")
                                        {
                                            <span class="badge badge-secondary">@item.TrangThai</span>
                                        }
                                        else
                                        {
                                            <span class="badge badge-danger">@item.TrangThai</span>
                                        }
                                    </td>
                                    <td>@item.MaNV</td>
                                    <td class="text-center">
                                        <div class="btn-group">
                                            <a asp-action="Details" asp-route-id="@item.MaHD" class="btn btn-sm btn-info" title="Chi tiết">
                                                <i class="fas fa-info-circle"></i>
                                            </a>
                                            @if (isAdminOrManager)
                                            {
                                                <a asp-action="Edit" asp-route-id="@item.MaHD" class="btn btn-sm btn-warning" title="Sửa">
                                                    <i class="fas fa-edit"></i>
                                                </a>
                                                <a asp-action="Delete" asp-route-id="@item.MaHD" class="btn btn-sm btn-danger" title="Xóa">
                                                    <i class="fas fa-trash-alt"></i>
                                                </a>
                                            }
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="9" class="text-center text-muted py-4">
                                    <i class="fas fa-inbox fa-3x mb-3"></i>
                                    <p>Không có dữ liệu hợp đồng</p>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <!-- Pagination -->
    <nav class="mt-4" aria-label="Page navigation">
        <div class="d-flex justify-content-between align-items-center">
            <a class="btn btn-outline-primary @prevDisabled" 
               asp-action="Index" 
               asp-route-pageNumber="@(Model.PageIndex - 1)" 
               asp-route-currentFilter="@ViewData["CurrentFilter"]">
                <i class="fas fa-chevron-left"></i> Trang trước
            </a>
            <span class="text-muted">
                Trang <strong>@Model.PageIndex</strong> / <strong>@Model.TotalPages</strong> (Tổng: @Model.TotalCount bản ghi)
            </span>
            <a class="btn btn-outline-primary @nextDisabled" 
               asp-action="Index" 
               asp-route-pageNumber="@(Model.PageIndex + 1)" 
               asp-route-currentFilter="@ViewData["CurrentFilter"]">
                Trang sau <i class="fas fa-chevron-right"></i>
            </a>
        </div>
    </nav>
</div>

@section Scripts {
    <script>
        @if (TempData["SuccessMessage"] != null)
        {
            <text>toastr.success('@TempData["SuccessMessage"]');</text>
        }
        @if (TempData["ErrorMessage"] != null)
        {
            <text>toastr.error('@TempData["ErrorMessage"]');</text>
        }

        // Confirm delete
        $(document).on('click', 'a[href*="Delete"]', function(e) {
            if (!confirm('Bạn có chắc muốn xóa hợp đồng này?')) e.preventDefault();
        });
    </script>
}