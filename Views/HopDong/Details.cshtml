@model HopDongViewModels.HopDongViewModel

@{
    ViewData["Title"] = "Hợp Đồng Chi Tiết";
    bool isAdminOrManager = ViewBag.IsAdminOrManager ?? false;
}

<h1 class="text-center mb-4">Hợp Đồng Chi Tiết</h1>

<div class="card">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Số Hợp Đồng</dt>
            <dd class="col-sm-9">@Model.SoHopDong</dd>

            <dt class="col-sm-3">Loại Hợp Đồng</dt>
            <dd class="col-sm-9">@Model.LoaiHD</dd>

            <dt class="col-sm-3">Ngày Bắt Đầu</dt>
            <dd class="col-sm-9">@Model.NgayBatDau.ToString("dd/MM/yyyy")</dd>

            <dt class="col-sm-3">Ngày Kết Thúc</dt>
            <dd class="col-sm-9">@Model.NgayKetThuc?.ToString("dd/MM/yyyy")</dd>

            <dt class="col-sm-3">Lương Cơ Bản</dt>
            <dd class="col-sm-9">@Model.LuongCoBan.ToString("N0")</dd>

            <dt class="col-sm-3">Phụ Cấp Ăn Trưa</dt>
            <dd class="col-sm-9">@Model.PhuCapAnTrua</dd>

            <dt class="col-sm-3">Phụ Cấp Xăng Xe</dt>
            <dd class="col-sm-9">@Model.PhuCapXangXe</dd>

            <dt class="col-sm-3">Phụ Cấp Điện Thoại</dt>
            <dd class="col-sm-9">@Model.PhuCapDienThoai</dd>

            <dt class="col-sm-3">Phụ Cấp Trách Nhiệm</dt>
            <dd class="col-sm-9">@Model.PhuCapTrachNhiem</dd>

            <dt class="col-sm-3">Phụ Cấp Khác</dt>
            <dd class="col-sm-9">@Model.PhuCapKhac</dd>

            <dt class="col-sm-3">Trạng Thái</dt>
            <dd class="col-sm-9">@Model.TrangThai</dd>

            <dt class="col-sm-3">Mã Nhân Viên</dt>
            <dd class="col-sm-9">@Model.MaNV</dd>
        </dl>
    </div>
</div>

<div class="mt-3">
    @if (isAdminOrManager)
    {
        <a asp-action="Edit" asp-route-id="@Model.MaHD" class="btn btn-warning">Edit</a>
    }
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>