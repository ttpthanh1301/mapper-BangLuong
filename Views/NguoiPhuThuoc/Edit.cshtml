@model NguoiPhuThuocViewModels.NguoiPhuThuocViewModel

@{
    ViewData["Title"] = "Chỉnh sửa người phụ thuộc";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-header bg-primary text-white text-center rounded-top-4">
                    <h3 class="mb-0"><i class="fa fa-users"></i> @ViewData["Title"]</h3>
                </div>

                <div class="card-body p-4">
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        @* Trường ẩn MaNPT là bắt buộc để POST form Edit *@
                        <input type="hidden" asp-for="MaNPT" />

                        <div class="row g-3">
                            <!-- Thông tin cơ bản -->
                            <div class="col-12">
                                <h5 class="text-primary border-bottom pb-2"><i class="fa fa-info-circle"></i> Thông tin cá nhân</h5>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="HoTen" class="form-label fw-semibold"></label>
                                <input asp-for="HoTen" class="form-control" placeholder="Nhập họ tên..." />
                                <span asp-validation-for="HoTen" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="NgaySinh" class="form-label fw-semibold"></label>
                                <input asp-for="NgaySinh" type="date" class="form-control" 
                                    value="@(Model.NgaySinh.ToString("yyyy-MM-dd"))" />
                                <span asp-validation-for="NgaySinh" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="MoiQuanHe" class="form-label fw-semibold"></label>
                                <input asp-for="MoiQuanHe" class="form-control" placeholder="VD: Con, Vợ/Chồng..." />
                                <span asp-validation-for="MoiQuanHe" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="MaNV" class="form-label fw-semibold"></label>
                                <select asp-for="MaNV" class="form-select">
                                    <option value="">-- Chọn nhân viên --</option>
                                    @foreach (var item in ViewBag.MaNV)
                                    {
                                        <option value="@item.Value" selected="@(item.Value == Model.MaNV)">
                                            @item.Text
                                        </option>
                                    }
                                </select>
                                <span asp-validation-for="MaNV" class="text-danger small"></span>
                            </div>

                            <!-- Thời gian giảm trừ -->
                            <div class="col-12 mt-4">
                                <h5 class="text-primary border-bottom pb-2"><i class="fa fa-calendar-alt"></i> Thời gian giảm trừ thuế</h5>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="ThoiGianBatDauGiamTru" class="form-label fw-semibold"></label>
                                <input asp-for="ThoiGianBatDauGiamTru" type="date" class="form-control" 
                                    value="@(Model.ThoiGianBatDauGiamTru.ToString("yyyy-MM-dd"))" />
                                <span asp-validation-for="ThoiGianBatDauGiamTru" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="ThoiGianKetThucGiamTru" class="form-label fw-semibold"></label>
                                <input asp-for="ThoiGianKetThucGiamTru" type="date" class="form-control" 
                                    value="@(Model.ThoiGianKetThucGiamTru?.ToString("yyyy-MM-dd"))" />
                                <span asp-validation-for="ThoiGianKetThucGiamTru" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="d-flex justify-content-between mt-4">
                            <a asp-action="Index" class="btn btn-outline-secondary px-4">
                                <i class="fa fa-arrow-left"></i> Quay lại
                            </a>
                            <button type="submit" class="btn btn-primary px-4">
                                <i class="fa fa-save"></i> Lưu
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}