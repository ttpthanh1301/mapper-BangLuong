@model ThamSoHeThongViewModels.ThamSoHeThongRequest

@{
    ViewData["Title"] = "Tạo mới Tham Số Hệ Thống";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-6">
            <div class="card shadow-lg border-0 rounded-4">

                <div class="card-header bg-primary text-white text-center rounded-top-4">
                    <h3 class="mb-0"><i class="fa fa-cogs"></i> @ViewData["Title"]</h3>
                </div>

                <div class="card-body p-4 p-md-5">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-3"></div>
                        
                        <div class="mb-3">
                            <label asp-for="MaTS" class="form-label fw-semibold">
                                <i class="fa fa-tag text-primary"></i> @Html.DisplayNameFor(m => m.MaTS)
                            </label>
                            <input asp-for="MaTS" class="form-control" placeholder="Nhập mã tham số (vd: LuongCoSo, BHXH)..."/>
                            <span asp-validation-for="MaTS" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="TenThamSo" class="form-label fw-semibold">
                                <i class="fa fa-list-alt text-primary"></i> @Html.DisplayNameFor(m => m.TenThamSo)
                            </label>
                            <input asp-for="TenThamSo" class="form-control" placeholder="Nhập tên/mô tả của tham số..."/>
                            <span asp-validation-for="TenThamSo" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="GiaTri" class="form-label fw-semibold">
                                <i class="fa fa-dollar-sign text-primary"></i> @Html.DisplayNameFor(m => m.GiaTri)
                            </label>
                            <input asp-for="GiaTri" class="form-control" placeholder="Nhập giá trị (vd: 1800000, 0.08)..."/>
                            <span asp-validation-for="GiaTri" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="NgayApDung" class="form-label fw-semibold">
                                <i class="fa fa-calendar-alt text-primary"></i> @Html.DisplayNameFor(m => m.NgayApDung)
                            </label>
                            <input asp-for="NgayApDung" class="form-control" type="date"/>
                            <span asp-validation-for="NgayApDung" class="text-danger small"></span>
                        </div>

                        <div class="d-flex justify-content-between mt-4">
                            <a asp-action="Index" class="btn btn-outline-secondary btn-lg">
                                <i class="fa fa-arrow-left"></i> Quay lại
                            </a>
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="fa fa-save"></i> Lưu lại
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}