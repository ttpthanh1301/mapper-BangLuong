@using static BangLuong.ViewModels.ThamSoHeThongViewModels

@model PaginatedList<ThamSoHeThongViewModel>

@{
    ViewData["Title"] = "Danh sách Tham Số Hệ Thống";
    var prevDisabledClass = !Model.HasPreviousPage ? "disabled" : "";
    var nextDisabledClass = !Model.HasNextPage ? "disabled" : "";
}

<style>
    table.table {
        border-collapse: separate !important;
        border-spacing: 0 6px; /* tạo khoảng cách giữa các hàng */
    }

    table.table th, table.table td {
        padding: 12px 18px; /* tăng khoảng cách trong ô */
        vertical-align: middle;
        white-space: nowrap; /* tránh xuống dòng gây lệch hàng */
    }

    table.table thead th {
        text-align: center;
    }

    .table-responsive {
        overflow-x: auto; /* bật cuộn ngang nếu bảng quá rộng */
    }

    /* Thêm hiệu ứng hover nhẹ cho hàng */
    table.table tbody tr:hover {
        background-color: #f5f9ff;
        transition: background-color 0.2s ease-in-out;
    }
</style>

<div class="container mt-5">
    <div class="card shadow-lg border-0 rounded-4">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center rounded-top-4">
            <h3 class="mb-0"><i class="fa fa-cogs"></i> @ViewData["Title"]</h3>
            <div>
                <a asp-action="Create" class="btn btn-success">
                    <i class="fa fa-plus-circle"></i> Thêm mới
                </a>
            </div>
        </div>

        <div class="card-body">
            <form asp-action="Index" method="get" class="mb-4">
                <div class="input-group">
                    <input type="text" name="searchString" class="form-control" placeholder="Tìm kiếm tham số..."
                           value="@ViewData["CurrentFilter"]" autocomplete="off" />
                    <button class="btn btn-secondary" type="submit">
                        <i class="fa fa-search"></i> Tìm kiếm
                    </button>
                </div>
            </form>

            <div class="table-responsive">
                <table class="table table-hover table-striped align-middle">
                    <thead class="table-primary text-center">
                        <tr>
                            @* === THÊM MỚI THEO YÊU CẦU === *@
                            <th>@Html.DisplayNameFor(model => model[0].MaTS)</th>

                            <th>@Html.DisplayNameFor(model => model[0].TenThamSo)</th>
                            <th>@Html.DisplayNameFor(model => model[0].GiaTri)</th>
                            <th>@Html.DisplayNameFor(model => model[0].NgayApDung)</th>
                            <th>Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                @* === THÊM MỚI THEO YÊU CẦU === *@
                                <td class="text-center">@Html.DisplayFor(modelItem => item.MaTS)</td>

                                <td>@Html.DisplayFor(modelItem => item.TenThamSo)</td>
                                <td>@Html.DisplayFor(modelItem => item.GiaTri)</td>

                                @* Định dạng lại ngày tháng *@
                                <td class="text-center">@item.NgayApDung?.ToString("dd/MM/yyyy")</td>
                                
                                @* Cập nhật nút bấm thành icon có tooltip *@
                                <td class="text-center">
                                    @* <a asp-action="Edit" asp-route-id="@item.MaTS" class="btn btn-warning btn-sm me-1" title="Sửa" data-bs-toggle="tooltip">
                                        <i class="fa fa-edit"></i>
                                    </a> *@
                                    <a asp-action="Details" asp-route-id="@item.MaTS" class="btn btn-info btn-sm me-1 text-white" title="Chi tiết" data-bs-toggle="tooltip">
                                        <i class="fa fa-info-circle"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.MaTS" class="btn btn-danger btn-sm" title="Xóa" data-bs-toggle="tooltip"
                                       onclick="return confirm('Bạn có chắc muốn xóa tham số này không?');">
                                        <i class="fa fa-trash-alt"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            @* Cập nhật phân trang *@
            <div class="d-flex justify-content-between align-items-center mt-3">
                <a asp-action="Index"
                   asp-route-pageNumber="@(Model.PageIndex - 1)"
                   asp-route-currentFilter="@ViewData["CurrentFilter"]"
                   class="btn btn-outline-primary @prevDisabledClass">
                    <i class="fa fa-chevron-left"></i> Trước
                </a>

                <span class="fw-semibold">Trang @Model.PageIndex / @Model.TotalPages</span>

                <a asp-action="Index"
                   asp-route-pageNumber="@(Model.PageIndex + 1)"
                   asp-route-currentFilter="@ViewData["CurrentFilter"]"
                   class="btn btn-outline-primary @nextDisabledClass">
                    Sau <i class="fa fa-chevron-right"></i>
                </a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Kích hoạt Tooltip Bootstrap 5
        var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'))
        var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
            return new bootstrap.Tooltip(tooltipTriggerEl)
        })
    </script>
}