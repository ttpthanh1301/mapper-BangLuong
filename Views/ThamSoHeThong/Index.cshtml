@using static BangLuong.ViewModels.ThamSoHeThongViewModels
@model PaginatedList<ThamSoHeThongViewModel>

@{
    ViewData["Title"] = "Tham Số Hệ Thống";
    var prevDisabledClass = !Model.HasPreviousPage ? "disabled" : "";
    var nextDisabledClass = !Model.HasNextPage ? "disabled" : "";
}

<h1>Tham Số Hệ Thống</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>

<form asp-action="Index" method="get" class="mb-3">
    <div class="d-flex">
        <input class="form-control me-2" placeholder="Search..." value="@ViewData["CurrentFilter"]" 
               name="searchString" autocomplete="off" />
        <button type="submit" class="btn btn-secondary">Search</button>
    </div>
</form>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model[0].TenThamSo)</th>
            <th>@Html.DisplayNameFor(model => model[0].GiaTri)</th>
            <th>@Html.DisplayNameFor(model => model[0].NgayApDung)</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.TenThamSo)</td>
                <td>@Html.DisplayFor(modelItem => item.GiaTri)</td>
                <td>@Html.DisplayFor(modelItem => item.NgayApDung)</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.MaTS" class="btn btn-warning btn-sm" title="Sửa"><i class="fa fa-edit"></i>Edit</a> 
                    <a asp-action="Details" asp-route-id="@item.MaTS" class="btn btn-info btn-sm text-white" title="Chi ti t"><i class="fa fa-info-circle"></i>Detail</a> 
                    <a asp-action="Delete" asp-route-id="@item.MaTS" class="btn btn-danger btn-sm" title="Xóa"><i class="fa fa-trash-alt"></i>Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="d-flex justify-content-between">
    <a asp-action="Index" 
       asp-route-sortOrder="@ViewData["CurrentSort"]"
       asp-route-pageNumber="@(Model.PageIndex - 1)"
       asp-route-currentFilter="@ViewData["CurrentFilter"]"
       class="btn btn-outline-primary @prevDisabledClass">
        Previous
    </a>

    <span>Page @Model.PageIndex of @Model.TotalPages</span>

    <a asp-action="Index" 
       asp-route-sortOrder="@ViewData["CurrentSort"]"
       asp-route-pageNumber="@(Model.PageIndex + 1)"
       asp-route-currentFilter="@ViewData["CurrentFilter"]"
       class="btn btn-outline-primary @nextDisabledClass">
        Next
    </a>
</div>
