@model IEnumerable<BangLuong.ViewModels.NguoiDungViewModels.NguoiDungViewModel>

@{
    ViewData["Title"] = "Danh sách người dùng";
}

<h2>@ViewData["Title"]</h2>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Mã NV</th>
            <th>Phân Quyền</th>
            <th>Trạng Thái</th>
            <th>Hành động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.MaNV</td>
                <td>@user.PhanQuyen</td>
                <td>@user.TrangThai</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@user.MaNV" class="btn btn-sm btn-warning">Edit</a>
                    <a asp-action="Delete" asp-route-id="@user.MaNV" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a class="btn btn-primary" asp-action="Register">Thêm người dùng mới</a>
