@model BangLuong.ViewModels.NguoiDungViewModels.NguoiDungRequest

@{
    ViewData["Title"] = "Chỉnh sửa người dùng";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Edit" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <input type="hidden" asp-for="MaNV"/>

    <div class="form-group">
        <label asp-for="Password"></label>
        <input asp-for="Password" type="password" class="form-control"/>
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="PhanQuyen"></label>
        <input asp-for="PhanQuyen" class="form-control"/>
        <span asp-validation-for="PhanQuyen" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="TrangThai"></label>
        <input asp-for="TrangThai" class="form-control"/>
        <span asp-validation-for="TrangThai" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Lưu</button>
    <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial"/>
}
