@model BangLuong.ViewModels.NguoiDungViewModels.NguoiDungViewModel

@{
    ViewData["Title"] = "Xóa người dùng";
}

<h2>@ViewData["Title"]</h2>

<h4>Bạn có chắc muốn xóa người dùng này không?</h4>

<div>
    <dl class="row">
        <dt class="col-sm-2">Mã NV</dt>
        <dd class="col-sm-10">@Model.MaNV</dd>

        <dt class="col-sm-2">Phân Quyền</dt>
        <dd class="col-sm-10">@Model.PhanQuyen</dd>

        <dt class="col-sm-2">Trạng Thái</dt>
        <dd class="col-sm-10">@Model.TrangThai</dd>
    </dl>
</div>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="MaNV"/>
    <button type="submit" class="btn btn-danger">Xóa</button>
    <a asp-action="Index" class="btn btn-secondary">Hủy</a>
</form>
