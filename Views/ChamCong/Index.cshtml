        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NgayChamCong)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GioVao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GioRa)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SoGioTangCa)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NhanVien.MaNV)
