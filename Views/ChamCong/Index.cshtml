@using static BangLuong.ViewModels.ChamCongViewModels
@model PaginatedList<ChamCongViewModel>

@{
    ViewData["Title"] = "Chấm Công";
    var prevDisabled = !Model.HasPreviousPage ? "disabled" : "";
    var nextDisabled = !Model.HasNextPage ? "disabled" : "";
    bool isEmployeeOnly = ViewBag.IsEmployeeOnly ?? false;
}

<div class="container-fluid">
    <!-- Header -->
    <div class="row mb-4">
        <div class="col-12">
            <h1 class="text-center">
                <i class="fas fa-clock text-primary"></i> Chấm Công
            </h1>
        </div>
    </div>

    <!-- Button Create New - Only for Admin & Manager -->
    @if (!isEmployeeOnly)
    {
        <div class="row mb-3">
            <div class="col-12">
                <a asp-action="Create" class="btn btn-success">
                    <i class="fas fa-plus"></i> Thêm mới chấm công
                </a>
            </div>
        </div>
    }

    <!-- Search Form -->
    @if (!isEmployeeOnly)
    {
        <div class="row mb-3">
            <div class="col-md-6">
                <form asp-action="Index" method="get">
                    <div class="input-group">
                        <input class="form-control" 
                               placeholder="Tìm theo mã nhân viên..." 
                               value="@ViewData["CurrentFilter"]" 
                               name="searchString"
                               autocomplete="off" />
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-search"></i> Tìm kiếm
                        </button>
                        @if (!string.IsNullOrEmpty(ViewData["CurrentFilter"]?.ToString()))
                        {
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-times"></i> Xóa bộ lọc
                            </a>
                        }
                    </div>
                </form>
            </div>
        </div>
    }

    <!-- Table Card -->
    <div class="card">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0">
                <i class="fas fa-list"></i> Danh sách chấm công
                @if (!string.IsNullOrEmpty(ViewData["CurrentFilter"]?.ToString()))
                {
                    <small class="float-right">
                        <i class="fas fa-filter"></i> Lọc: @ViewData["CurrentFilter"]
                    </small>
                }
            </h5>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover table-striped mb-0">
                    <thead class="thead-light">
                        <tr>
                            <th>
                                <a asp-action="Index" 
                                   asp-route-sortOrder="date"
                                   asp-route-currentFilter="@ViewData["CurrentFilter"]"
                                   asp-route-pageNumber="@Model.PageIndex"
                                   class="text-dark">
                                    Ngày chấm công
                                    <i class="fas fa-sort"></i>
                                </a>
                            </th>
                            <th>Giờ vào</th>
                            <th>Giờ ra</th>
                            <th>
                                <a asp-action="Index" 
                                   asp-route-sortOrder="overtime_desc"
                                   asp-route-currentFilter="@ViewData["CurrentFilter"]"
                                   asp-route-pageNumber="@Model.PageIndex"
                                   class="text-dark">
                                    Giờ tăng ca
                                    <i class="fas fa-sort"></i>
                                </a>
                            </th>
                            <th>Mã nhân viên</th>
                            @if (!isEmployeeOnly)
                            {
                                <th class="text-center" style="width: 200px;">Thao tác</th>
                            }
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Any())
                        {
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        <i class="far fa-calendar-alt text-primary"></i>
                                        @item.NgayChamCong.ToString("dd/MM/yyyy")
                                    </td>
                                    <td>
                                        <span class="badge badge-success">
                                            <i class="far fa-clock"></i> @item.GioVao
                                        </span>
                                    </td>
                                    <td>
                                        <span class="badge badge-danger">
                                            <i class="far fa-clock"></i> @item.GioRa
                                        </span>
                                    </td>
                                    <td>
                                        @if (item.SoGioTangCa > 0)
                                        {
                                            <span class="badge badge-warning">
                                                <i class="fas fa-business-time"></i> @item.SoGioTangCa giờ
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                    <td>
                                        <strong>@item.MaNV</strong>
                                    </td>
                                    @if (!isEmployeeOnly)
                                    {
                                        <td class="text-center">
                                            <div class="btn-group" role="group">
                                                <a asp-action="Details" 
                                                   asp-route-id="@item.MaCC" 
                                                   class="btn btn-sm btn-info"
                                                   title="Chi tiết">
                                                    <i class="fas fa-info-circle"></i>
                                                </a>
                                                <a asp-action="Edit" 
                                                   asp-route-id="@item.MaCC" 
                                                   class="btn btn-sm btn-warning"
                                                   title="Sửa">
                                                    <i class="fas fa-edit"></i>
                                                </a>
                                                <a asp-action="Delete" 
                                                   asp-route-id="@item.MaCC" 
                                                   class="btn btn-sm btn-danger"
                                                   title="Xóa">
                                                    <i class="fas fa-trash-alt"></i>
                                                </a>
                                            </div>
                                        </td>
                                    }
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="@(isEmployeeOnly ? 5 : 6)" class="text-center text-muted py-4">
                                    <i class="fas fa-inbox fa-3x mb-3"></i>
                                    <p>Không có dữ liệu chấm công</p>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <!-- ✅ PAGINATION - Fixed to preserve filter -->
    <nav class="mt-4" aria-label="Page navigation">
        <div class="d-flex justify-content-between align-items-center">
            <!-- Previous Button -->
            <a class="btn btn-outline-primary @prevDisabled" 
               asp-action="Index" 
               asp-route-pageNumber="@(Model.PageIndex - 1)"
               asp-route-currentFilter="@ViewData["CurrentFilter"]"
               asp-route-sortOrder="@ViewData["CurrentSort"]">
                <i class="fas fa-chevron-left"></i> Trang trước
            </a>

            <!-- Page Info -->
            <span class="text-muted">
                Trang <strong>@Model.PageIndex</strong> / <strong>@Model.TotalPages</strong>
                <small class="d-none d-sm-inline">(Tổng: @Model.TotalCount bản ghi)</small>
            </span>

            <!-- Next Button -->
            <a class="btn btn-outline-primary @nextDisabled" 
               asp-action="Index" 
               asp-route-pageNumber="@(Model.PageIndex + 1)"
               asp-route-currentFilter="@ViewData["CurrentFilter"]"
               asp-route-sortOrder="@ViewData["CurrentSort"]">
                Trang sau <i class="fas fa-chevron-right"></i>
            </a>
        </div>
    </nav>
</div>

@section Scripts {
    <script>
        // Confirm delete
        $(document).on('click', 'a[href*="Delete"]', function(e) {
            if (!confirm('Bạn có chắc muốn xóa bản ghi chấm công này?')) {
                e.preventDefault();
            }
        });
    </script>
}