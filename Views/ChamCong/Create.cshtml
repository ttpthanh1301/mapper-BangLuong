@model ChamCongViewModels.ChamCongRequest

@{
    ViewData["Title"] = "Thêm Chấm Công";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-6">
            <div class="card shadow-lg border-0 rounded-4">

                <div class="card-header bg-primary text-white text-center rounded-top-4">
                    <h3 class="mb-0"><i class="fa fa-clock"></i> @ViewData["Title"]</h3>
                </div>

                <div class="card-body p-4 p-md-5">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="mb-3">
                            <label asp-for="MaCC" class="form-label fw-semibold"></label>
                            <input asp-for="MaCC" class="form-control" placeholder="Nhập mã chấm công (nếu cần)..."/>
                            <span asp-validation-for="MaCC" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="MaNV" class="form-label fw-semibold"></label>
                            <select asp-for="MaNV" class="form-select" asp-items="ViewBag.MaNV">
                                <option value="">-- Chọn nhân viên --</option>
                            </select>
                            <span asp-validation-for="MaNV" class="text-danger small"></span>
                        </div>
                        
                        <div class="mb-3">
                            <label asp-for="NgayChamCong" class="form-label fw-semibold"></label>
                            <input asp-for="NgayChamCong" class="form-control" type="date"/>
                            <span asp-validation-for="NgayChamCong" class="text-danger small"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="GioVao" class="form-label fw-semibold"></label>
                                <input asp-for="GioVao" class="form-control" type="time"/>
                                <span asp-validation-for="GioVao" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="GioRa" class="form-label fw-semibold"></label>
                                <input asp-for="GioRa" class="form-control" type="time"/>
                                <span asp-validation-for="GioRa" class="text-danger small"></span>
                            </div>
                        </div>

                        @* === THÊM LẠI TRƯỜNG TĂNG CA === *@
                        <div class="mb-3">
                            <label asp-for="SoGioTangCa" class="form-label fw-semibold"></label>
                            <input asp-for="SoGioTangCa" class="form-control" type="number" step="0.5" placeholder="Nhập số giờ OT đã được duyệt..."/>
                            <span asp-validation-for="SoGioTangCa" class="text-danger small"></span>
                        </div>

                        <div class="d-flex justify-content-between mt-4">
                            <a asp-action="Index" class="btn btn-outline-secondary btn-lg">
                                <i class="fa fa-arrow-left"></i> Quay lại
                            </a>
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="fa fa-save"></i> Lưu lại
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}