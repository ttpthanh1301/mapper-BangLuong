<!DOCTYPE html>
<html lang="vi">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Quản Lý Tính Lương</title>

    <link href="https://fonts.googleapis.com/css2?family=Segoe+UI:wght@400;600&family=Roboto:wght@400;700&display=swap"
        rel="stylesheet">

    <link rel="stylesheet" href="~/plugins/fontawesome-free/css/all.min.css">
    <link rel="stylesheet" href="~/dist/css/adminlte.min.css">
    <link rel="stylesheet" href="~/plugins/overlayScrollbars/css/OverlayScrollbars.min.css">

    @* Đã thêm lệnh này để khắc phục lỗi 'Styles' section chưa được render *@
    **@RenderSection("Styles", required: false)** <style>
        body {
            font-family: "Segoe UI", "Roboto", sans-serif;
            background-color: #f4f6f9;
        }

        .main-sidebar {
            background-color: #1a237e !important;
            /* Navy blue */
        }

        .brand-link {
            border-bottom: 1px solid #3949ab;
        }

        .brand-link .brand-text {
            color: #ffeb3b !important;
            font-weight: 700;
        }

        .nav-sidebar .nav-link {
            transition: background-color 0.3s, color 0.3s;
            font-weight: 500;
        }

        .nav-sidebar .nav-link:hover {
            background-color: #3949ab !important;
            color: #fff !important;
        }

        .nav-item.menu-open>.nav-link {
            background-color: #283593 !important;
            color: #fff;
        }

        .nav-icon {
            width: 22px;
        }

        footer.main-footer {
            font-size: 14px;
            color: #555;
        }
    </style>
</head>

<body class="hold-transition sidebar-mini layout-fixed">
    <div class="wrapper">

        <nav class="main-header navbar navbar-expand navbar-white navbar-light shadow-sm">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" data-widget="pushmenu" href="#" role="button">
                        <i class="fas fa-bars"></i>
                    </a>
                </li>
                <li class="nav-item d-none d-sm-inline-block">
                    <a asp-controller="Home" asp-action="Index" class="nav-link">Trang chủ</a>
                </li>
            </ul>

            <ul class="navbar-nav ml-auto">
                <li class="nav-item">
                    <a class="nav-link" data-widget="fullscreen" href="#" role="button">
                        <i class="fas fa-expand-arrows-alt"></i>
                    </a>
                </li>
            </ul>
        </nav>
        <aside class="main-sidebar elevation-4">
            <a href="~/" class="brand-link text-center">
                <span class="brand-text">QUẢN LÝ LƯƠNG</span>
            </a>

            <div class="sidebar">
                <div class="user-panel mt-3 pb-3 mb-3 d-flex">
                    <div class="image">
                        <img src="~/dist/img/user2-160x160.jpg" class="img-circle elevation-2" alt="User">
                    </div>
                    <div class="info">
                        <a href="#" class="d-block" style="color:white">Xin chào, Admin</a>
                    </div>
                </div>

                <nav class="mt-2">
                    <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu">

                        <li class="nav-item">
                            <a asp-controller="Home" asp-action="Index" class="nav-link active">
                                <i class="nav-icon fas fa-tachometer-alt"></i>
                                <p>Bảng điều khiển</p>
                            </a>
                        </li>

                        <li class="nav-item has-treeview">
                            <a href="#" class="nav-link">
                                <i class="nav-icon fas fa-users"></i>
                                <p>
                                    Quản lý danh mục
                                    <i class="right fas fa-angle-left"></i>
                                </p>
                            </a>
                            <ul class="nav nav-treeview">
                                <li class="nav-item"><a asp-controller="NhanVien" asp-action="Index" class="nav-link"><i
                                            class="far fa-circle nav-icon"></i>
                                        <p>Hồ sơ nhân viên</p>
                                    </a></li>
                                <li class="nav-item"><a asp-controller="HopDong" asp-action="Index" class="nav-link"><i
                                            class="far fa-circle nav-icon"></i>
                                        <p>Hợp đồng</p>
                                    </a></li>
                                <li class="nav-item"><a asp-controller="PhongBan" asp-action="Index" class="nav-link"><i
                                            class="far fa-circle nav-icon"></i>
                                        <p>Phòng ban</p>
                                    </a></li>
                                <li class="nav-item"><a asp-controller="ChucVu" asp-action="Index" class="nav-link"><i
                                            class="far fa-circle nav-icon"></i>
                                        <p>Chức vụ</p>
                                    </a></li>
                                <li class="nav-item"><a asp-controller="NguoiPhuThuoc" asp-action="Index"
                                        class="nav-link"><i class="far fa-circle nav-icon"></i>
                                        <p>Người phụ thuộc</p>
                                    </a></li>
                                <li class="nav-item"><a asp-controller="ThamSoHeThong" asp-action="Index"
                                        class="nav-link"><i class="far fa-circle nav-icon"></i>
                                        <p>Tham số hệ thống</p>
                                    </a></li>
                            </ul>
                        </li>

                        <li class="nav-item has-treeview">
                            <a href="#" class="nav-link">
                                <i class="nav-icon fas fa-clock"></i>
                                <p>
                                    Quản lý chấm công
                                    <i class="right fas fa-angle-left"></i>
                                </p>
                            </a>
                            <ul class="nav nav-treeview">
                                <li class="nav-item"><a asp-controller="ChamCong" asp-action="Index" class="nav-link"><i
                                            class="far fa-circle nav-icon"></i>
                                        <p>Giờ trình (Chấm công)</p>
                                    </a></li>
                                <li class="nav-item"><a asp-controller="TongHopCong" asp-action="Index"
                                        class="nav-link"><i class="far fa-circle nav-icon"></i>
                                        <p>Tổng hợp công</p>
                                    </a></li>
                            </ul>
                        </li>

                        <li class="nav-item has-treeview">
                            <a href="#" class="nav-link">
                                <i class="nav-icon fas fa-calculator"></i>
                                <p>
                                    Tính lương
                                    <i class="right fas fa-angle-left"></i>
                                </p>
                            </a>
                            <ul class="nav nav-treeview">
                                <!-- Phụ cấp -->
                                <li class="nav-item has-treeview">
                                    <a href="#" class="nav-link">
                                        <i class="far fa-circle nav-icon"></i>
                                        <p>
                                            Phụ cấp
                                            <i class="right fas fa-angle-left"></i>
                                        </p>
                                    </a>
                                    <ul class="nav nav-treeview">
                                        <li class="nav-item">
                                            <a asp-controller="DanhMucPhuCap" asp-action="Index" class="nav-link">
                                                <i class="far fa-dot-circle nav-icon"></i>
                                                <p>Danh mục phụ cấp</p>
                                            </a>
                                        </li>
                                        <li class="nav-item">
                                            <a asp-controller="ChiTietPhuCap" asp-action="Index" class="nav-link">
                                                <i class="far fa-dot-circle nav-icon"></i>
                                                <p>Chi tiết phụ cấp</p>
                                            </a>
                                        </li>
                                    </ul>
                                </li>

                                <!-- Khen thưởng -->
                                <li class="nav-item has-treeview">
                                    <a href="#" class="nav-link">
                                        <i class="far fa-circle nav-icon"></i>
                                        <p>
                                            Khen thưởng
                                            <i class="right fas fa-angle-left"></i>
                                        </p>
                                    </a>
                                    <ul class="nav nav-treeview">
                                        <li class="nav-item">
                                            <a asp-controller="DanhMucKhenThuong" asp-action="Index" class="nav-link">
                                                <i class="far fa-dot-circle nav-icon"></i>
                                                <p>Danh mục khen thưởng</p>
                                            </a>
                                        </li>
                                        <li class="nav-item">
                                            <a asp-controller="ChiTietKhenThuong" asp-action="Index" class="nav-link">
                                                <i class="far fa-dot-circle nav-icon"></i>
                                                <p>Chi tiết khen thưởng</p>
                                            </a>
                                        </li>
                                    </ul>
                                </li>

                                <!-- Kỷ luật -->
                                <li class="nav-item has-treeview">
                                    <a href="#" class="nav-link">
                                        <i class="far fa-circle nav-icon"></i>
                                        <p>
                                            Kỷ luật
                                            <i class="right fas fa-angle-left"></i>
                                        </p>
                                    </a>
                                    <ul class="nav nav-treeview">
                                        <li class="nav-item">
                                            <a asp-controller="DanhMucKyLuat" asp-action="Index" class="nav-link">
                                                <i class="far fa-dot-circle nav-icon"></i>
                                                <p>Danh mục kỷ luật</p>
                                            </a>
                                        </li>
                                        <li class="nav-item">
                                            <a asp-controller="ChiTietKyLuat" asp-action="Index" class="nav-link">
                                                <i class="far fa-dot-circle nav-icon"></i>
                                                <p>Chi tiết kỷ luật</p>
                                            </a>
                                        </li>
                                    </ul>
                                </li>

                                <!-- Bảng lương -->
                                <li class="nav-item">
                                    <a asp-controller="BangTinhLuong" asp-action="Index" class="nav-link">
                                        <i class="far fa-circle nav-icon"></i>
                                        <p>Bảng lương</p>
                                    </a>
                                </li>
                            </ul>

                        </li>

                        <li class="nav-item has-treeview">
                            <a href="#" class="nav-link">
                                <i class="nav-icon fas fa-chart-bar"></i>
                                <p>
                                    Báo cáo
                                    <i class="right fas fa-angle-left"></i>
                                </p>
                            </a>
                            <ul class="nav nav-treeview">
                                <li class="nav-item"><a asp-controller="BaoCao" asp-action="NhanSuTongHop"
                                        class="nav-link"><i class="far fa-circle nav-icon"></i>
                                        <p>Báo cáo tổng hợp nhân sự</p>
                                    </a></li>
                                <li class="nav-item"><a asp-controller="BaoCao" asp-action="BaoCaoTongCong"
                                        class="nav-link"><i class="far fa-circle nav-icon"></i>
                                        <p>Báo cáo tổng hợp chấm công</p>
                                    </a></li>
                                <li class="nav-item"><a asp-controller="BaoCao" asp-action="BangLuongChiTiet"
                                        class="nav-link"><i class="far fa-circle nav-icon"></i>
                                        <p>Bảng lương chi tiết tháng</p>
                                    </a></li>
                                <li class="nav-item"><a asp-controller="BaoCao" asp-action="PhieuLuongCaNhan"
                                        class="nav-link"><i class="far fa-circle nav-icon"></i>
                                        <p>Phiếu lương cá nhân</p>
                                    </a></li>
                            </ul>
                        </li>

                        <li class="nav-item has-treeview">
                            <a href="#" class="nav-link">
                                <i class="nav-icon fas fa-cogs"></i>
                                <p>
                                    Quản lý hệ thống
                                    <i class="right fas fa-angle-left"></i>
                                </p>
                            </a>
                            <ul class="nav nav-treeview">
                                <li class="nav-item"><a asp-controller="NguoiDung" asp-action="Index"
                                        class="nav-link"><i class="far fa-circle nav-icon"></i>
                                        <p>Tài khoản người dùng</p>
                                    </a></li>

                            </ul>
                        </li>

                    </ul>
                </nav>
            </div>
        </aside>

        <div class="content-wrapper">
            <section class="content pt-3">
                <div class="container-fluid">
                    @RenderBody()
                </div>
            </section>
        </div>

        <footer class="main-footer text-sm text-center">
            <strong>© 2025 Hệ thống Quản lý Tính lương.</strong> All rights reserved.
        </footer>

    </div>
    <script src="~/plugins/jquery/jquery.min.js"></script>
    <script src="~/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/plugins/overlayScrollbars/js/jquery.overlayScrollbars.min.js"></script>
    <script src="~/dist/js/adminlte.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>

</html>