@model ChucVuViewModels.ChucVuRequest

@{
    ViewData["Title"] = "Tạo mới Chức Vụ";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-6">
            <div class="card shadow-lg border-0 rounded-4">

                <div class="card-header bg-primary text-white text-center rounded-top-4">
                    <h3 class="mb-0"><i class="fa fa-id-badge"></i> @ViewData["Title"]</h3>
                </div>

                <div class="card-body p-4 p-md-5">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                        
                        <div class="mb-3">
                            <label asp-for="MaCV" class="form-label fw-semibold"></label>
                            <input asp-for="MaCV" class="form-control" placeholder="Nhập mã chức vụ (ví dụ: NV, TP, GD)..."/>
                            <span asp-validation-for="MaCV" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="TenCV" class="form-label fw-semibold"></label>
                            <input asp-for="TenCV" class="form-control" placeholder="Nhập tên chức vụ (ví dụ: Nhân viên, Trưởng phòng)..."/>
                            <span asp-validation-for="TenCV" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="MoTa" class="form-label fw-semibold"></label>
                            @* Chuyển sang <textarea> để nhập mô tả dễ hơn *@
                            <textarea asp-for="MoTa" class="form-control" rows="3" placeholder="Nhập mô tả chi tiết..."></textarea>
                            <span asp-validation-for="MoTa" class="text-danger small"></span>
                        </div>

                        <div class="d-flex justify-content-between mt-4">
                            <a asp-action="Index" class="btn btn-outline-secondary btn-lg">
                                <i class="fa fa-arrow-left"></i> Quay lại
                            </a>
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="fa fa-save"></i> Lưu lại
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}