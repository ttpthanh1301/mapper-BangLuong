@{
    ViewData["Title"] = "Import Nhân Viên";
}

<h2>Import Danh Sách Nhân Viên</h2>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

<div class="row">
    <div class="col-md-6">
        <form asp-action="Import" method="post" enctype="multipart/form-data">
            <div class="form-group">
                <label>Chọn file Excel:</label>
                <input type="file" name="file" class="form-control" accept=".xlsx,.xls" required />
            </div>
            <br />
            <button type="submit" class="btn btn-primary">
                <i class="fa fa-upload"></i> Import
            </button>
            <a asp-action="DownloadTemplate" class="btn btn-info">
                <i class="fa fa-download"></i> Tải Template
            </a>
            <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
        </form>
    </div>
</div>