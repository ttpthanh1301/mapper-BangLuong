@using BangLuong.ViewModels
@using static BangLuong.ViewModels.NhanVienViewModels
@model PaginatedList<NhanVienViewModel>

@{
    ViewData["Title"] = "Danh sách Nhân Viên";
    bool isEmployeeOnly = ViewBag.IsEmployeeOnly ?? false;
    var prevDisabled = !Model.HasPreviousPage ? "disabled" : "";
    var nextDisabled = !Model.HasNextPage ? "disabled" : "";
}

<div class="container-fluid">
    <!-- Header -->
    <div class="row mb-4">
        <div class="col-12">
            <h1 class="text-center">
                <i class="fas fa-users text-primary"></i>
                @(isEmployeeOnly ? "Thông tin cá nhân" : "Danh sách Nhân Viên")
            </h1>
        </div>
    </div>

    <!-- Action Buttons -->
    @if (!isEmployeeOnly)
    {
        <div class="row mb-3">
            <div class="col-12">
                @if (User.IsInRole("Admin"))
                {
                    <a asp-action="Create" class="btn btn-success">
                        <i class="fas fa-plus"></i> Thêm mới
                    </a>
                    <button type="button" class="btn btn-warning" data-toggle="modal" data-target="#importModal">
                        <i class="fas fa-upload"></i> Import Excel
                    </button>
                }
                @if (User.IsInRole("Admin") || User.IsInRole("Manager"))
                {
                    <a asp-action="ExportToExcel" class="btn btn-primary">
                        <i class="fas fa-file-excel"></i> Export Excel
                    </a>
                }
            </div>
        </div>

        <!-- Search -->
        <div class="row mb-3">
            <div class="col-md-6">
                <form asp-action="Index" method="get">
                    <div class="input-group">
                        <input class="form-control" name="searchString" value="@ViewData["CurrentFilter"]" placeholder="Tìm theo tên, mã NV, CCCD..." autocomplete="off" />
                        <button class="btn btn-primary" type="submit">
                            <i class="fas fa-search"></i> Tìm kiếm
                        </button>
                        @if (!string.IsNullOrEmpty(ViewData["CurrentFilter"]?.ToString()))
                        {
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-times"></i> Xóa bộ lọc
                            </a>
                        }
                    </div>
                </form>
            </div>
        </div>
    }

    <!-- Table -->
    <div class="card">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0">
                <i class="fas fa-list"></i> @(isEmployeeOnly ? "Thông tin của bạn" : "Danh sách nhân viên")
                @if (!string.IsNullOrEmpty(ViewData["CurrentFilter"]?.ToString()))
                {
                    <small class="float-right"><i class="fas fa-filter"></i> Lọc: @ViewData["CurrentFilter"]</small>
                }
            </h5>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover table-striped mb-0">
                    <thead class="thead-light">
                        <tr>
                            <th>Mã NV</th>
                            <th>
                                <a asp-action="Index" asp-route-sortOrder="@ViewData["NameSortParm"]" asp-route-currentFilter="@ViewData["CurrentFilter"]" class="text-dark">
                                    Họ Tên <i class="fas fa-sort"></i>
                                </a>
                            </th>
                            <th>Ngày Sinh</th>
                            <th>Giới Tính</th>
                            <th>CCCD</th>
                            <th>SĐT</th>
                            <th>Email</th>
                            <th>Ngày Vào Làm</th>
                            <th>Trạng Thái</th>
                            <th>Phòng Ban</th>
                            <th>Chức Vụ</th>
                            @if (!isEmployeeOnly)
                            {
                                <th class="text-center">Thao tác</th>
                            }
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Any())
                        {
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td><strong>@item.MaNV</strong></td>
                                    <td>@item.HoTen</td>
                                    <td>@item.NgaySinh?.ToString("dd/MM/yyyy")</td>
                                    <td>
                                        @if (item.GioiTinh == "Nam")
                                        {
                                            <span class="badge badge-primary"><i class="fas fa-male"></i> Nam</span>
                                        }
                                        else if (item.GioiTinh == "Nữ")
                                        {
                                            <span class="badge badge-danger"><i class="fas fa-female"></i> Nữ</span>
                                        }
                                        else
                                        {
                                            <span class="badge badge-secondary">Khác</span>
                                        }
                                    </td>
                                    <td>@item.CCCD</td>
                                    <td>@item.SoDienThoai</td>
                                    <td>@item.Email</td>
                                    <td>@item.NgayVaoLam.ToString("dd/MM/yyyy")</td>
                                    <td>
                                        @if (item.TrangThai == "Đang làm việc")
                                        {
                                            <span class="badge badge-success">@item.TrangThai</span>
                                        }
                                        else
                                        {
                                            <span class="badge badge-secondary">@item.TrangThai</span>
                                        }
                                    </td>
                                    <td>@item.TenPhongBan</td>
                                    <td>@item.TenChucVu</td>
                                    @if (!isEmployeeOnly)
                                    {
                                        <td class="text-center">
                                            <div class="btn-group">
                                                <a asp-action="Details" asp-route-id="@item.MaNV" class="btn btn-sm btn-info" title="Chi tiết"><i class="fas fa-info-circle"></i></a>
                                                <a asp-action="Edit" asp-route-id="@item.MaNV" class="btn btn-sm btn-warning" title="Sửa"><i class="fas fa-edit"></i></a>
                                                @if (User.IsInRole("Admin"))
                                                {
                                                    <a asp-action="Delete" asp-route-id="@item.MaNV" class="btn btn-sm btn-danger" title="Xóa"><i class="fas fa-trash-alt"></i></a>
                                                }
                                            </div>
                                        </td>
                                    }
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="12" class="text-center text-muted py-4">
                                    <i class="fas fa-inbox fa-3x mb-3"></i>
                                    <p>Không có dữ liệu nhân viên</p>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <!-- Pagination -->
    <nav class="mt-4" aria-label="Page navigation">
        <div class="d-flex justify-content-between align-items-center">
            <a class="btn btn-outline-primary @prevDisabled" asp-action="Index" asp-route-pageNumber="@(Model.PageIndex - 1)" asp-route-currentFilter="@ViewData["CurrentFilter"]" asp-route-sortOrder="@ViewData["CurrentSort"]">
                <i class="fas fa-chevron-left"></i> Trang trước
            </a>
            <span class="text-muted">Trang <strong>@Model.PageIndex</strong> / <strong>@Model.TotalPages</strong> (Tổng: @Model.TotalCount bản ghi)</span>
            <a class="btn btn-outline-primary @nextDisabled" asp-action="Index" asp-route-pageNumber="@(Model.PageIndex + 1)" asp-route-currentFilter="@ViewData["CurrentFilter"]" asp-route-sortOrder="@ViewData["CurrentSort"]">
                Trang sau <i class="fas fa-chevron-right"></i>
            </a>
        </div>
    </nav>
</div>

<!-- Import Modal -->
@if (User.IsInRole("Admin"))
{
    <div class="modal fade" id="importModal" tabindex="-1" role="dialog">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <form asp-action="ImportFromExcel" method="post" enctype="multipart/form-data">
                    <div class="modal-header">
                        <h5 class="modal-title"><i class="fas fa-upload"></i> Import Nhân Viên từ Excel</h5>
                        <button type="button" class="close" data-dismiss="modal"><span>&times;</span></button>
                    </div>
                    <div class="modal-body">
                        <input type="file" name="file" class="form-control-file" accept=".xlsx,.xls" required />
                        <small class="form-text text-muted">Chỉ chấp nhận file .xlsx hoặc .xls</small>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Hủy</button>
                        <button type="submit" class="btn btn-primary"><i class="fas fa-upload"></i> Import</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
}

@section Scripts {
    <script>
        @if (TempData["SuccessMessage"] != null)
        {
            <text>toastr.success('@TempData["SuccessMessage"]');</text>
        }
        @if (TempData["ErrorMessage"] != null)
        {
            <text>toastr.error('@TempData["ErrorMessage"]');</text>
        }

        // Confirm delete
        $(document).on('click', 'a[href*="Delete"]', function(e) {
            if (!confirm('Bạn có chắc muốn xóa nhân viên này?')) e.preventDefault();
        });
    </script>
}
